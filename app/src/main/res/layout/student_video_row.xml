<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="45dp"
    android:elevation="15dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/vidImageTV"
            android:layout_marginTop="13dp"
            android:src="@drawable/videoclipart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoNameTV"
            android:text="Video Name"
            android:layout_toRightOf="@+id/vidImageTV"
            android:layout_toEndOf="@+id/vidImageTV"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gotoVideoBtn"
            android:text="Show video"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/greenrounded"
            android:padding="15dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/videoNameTV"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />





    </RelativeLayout>





</androidx.cardview.widget.CardView>

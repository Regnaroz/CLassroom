<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="45dp"
    android:elevation="15dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
      >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageTv"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subjectTv"
            android:text="Subject"
            android:layout_toRightOf="@+id/imageTv"
            android:layout_toEndOf="@+id/imageTv"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacherNameTv"
            android:text="Teacher Name"
            android:layout_toRightOf="@+id/imageTv"
            android:layout_toEndOf="@+id/imageTv"
            android:layout_below="@+id/subjectTv"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/goToStudentclass"
    android:text="Go To Class"
    android:textSize="15dp"
    android:textStyle="bold"
    android:background="@drawable/greenrounded"
    android:padding="15dp"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/teacherNameTv"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    />





    </RelativeLayout>





</androidx.cardview.widget.CardView>
